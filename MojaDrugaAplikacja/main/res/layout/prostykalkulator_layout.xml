<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A4D3BD">

    <Button
        android:id="@+id/przyciskDzielenie_prostyKalkulator"
        android:layout_width="153dp"
        android:layout_height="152dp"
        android:backgroundTint="#5BB182"
        android:text="DZIELENIE"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.848"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.868" />

    <Button
        android:id="@+id/przyciskDodawanie_prostyKalkulator"
        android:layout_width="153dp"
        android:layout_height="152dp"
        android:backgroundTint="#5BB182"
        android:text="DODAWANIE"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.573" />

    <Button
        android:id="@+id/przyciskMnozenie_prostyKalkulator"
        android:layout_width="153dp"
        android:layout_height="152dp"
        android:backgroundTint="#5BB182"
        android:textColor="@color/white"
        android:text="MNOÅ»ENIE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.868" />

    <Button
        android:id="@+id/przyciskOdejmywanie_prostyKalkulator"
        android:layout_width="153dp"
        android:layout_height="152dp"
        android:backgroundTint="#5BB182"
        android:textColor="@color/white"
        android:text="ODEJMYWANIE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.848"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.573" />

    <EditText
        android:id="@+id/pole2_prostyKalkulator"
        android:layout_width="375dp"
        android:layout_height="66dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="DRUGA LICZBA"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="#B6B6B6"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.305" />

    <EditText
        android:id="@+id/pole1_prostyKalkulator"
        android:layout_width="375dp"
        android:layout_height="66dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="PIERWSZA LICZBA"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="#B6B6B6"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.187"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/wynik_prostyKalkulator"
        android:layout_width="375dp"
        android:layout_height="85dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>